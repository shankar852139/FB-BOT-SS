# Node.js की बेस इमेज का उपयोग करें
FROM node:20

# कार्यशील डायरेक्टरी सेट करें
WORKDIR /app

# पैकेज फाइल्स को कॉपी करें
COPY package*.json ./

# पैकेज इंस्टॉल करें
RUN npm install

# पूरे प्रोजेक्ट को कॉपी करें
COPY . .

# एप्लिकेशन का पोर्ट एक्सपोज करें
EXPOSE 3000

# एप्लिकेशन को चलाएं
CMD ["node", "mirai.js"]
